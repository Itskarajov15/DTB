@using DTB.ViewModels.Article
@model AddArticleViewModel
@{
    ViewBag.Title = "Add Article";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js" integrity="sha512-lbwH47l/tPXJYG9AcFNoJaTMhGvYWhVM9YI43CT+uteTRRaiLCui8snIgyAN8XWgNjNhCqlAUdzZptso6OCoFQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" integrity="sha512-6S2HWzVFxruDlZxI3sXOZZ4/eJ8AcxkQH1+JjSe/ONCEqR9L4Ysq5JdT5ipqtzU7WHalNwzwBv+iE51gNHJNqQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<div class="text-center mt-5">
    <h1>Add Article</h1>
</div>
<hr />
<form asp-action="Add" method="post" class="row g-3 bg-light p-2 text-dark bg-opacity-75 center">

    <input asp-for="@Model.Id" type="hidden" />
    <input asp-for="@Model.AuthorId" type="hidden" />

    <div class="col-md-6">
        <label asp-for="@Model.Title" class="form-label">Title</label>
        <input asp-for="@Model.Title" class="form-control" id="inputTitle" placeholder="Revolutionizing Recruitment..." aria-required="true">
        <span asp-validation-for="@Model.Title" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="@Model.DateOfCreation" class="form-label">
            Date Of Creation
        </label>
        @Html.TextBoxFor(model => model.DateOfCreation, new
            {
                @class = "form-control",
                type = "date"
            })
        <span asp-validation-for="@Model.DateOfCreation" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="@Model.Content" class="form-label">Content</label>
        <textarea asp-for="@Model.Content" class="form-control" id="inputContent" aria-required="true" placeholder="Content of the article...."></textarea>
        <span asp-validation-for="@Model.Content" class="text-danger"></span>
    </div>
    <div class="col-md-12">
        <label asp-for="@Model.ImageUrl" class="form-label">ImageUrl</label>
        <input asp-for="@Model.ImageUrl" class="form-control" aria-required="true" placeholder="https://img.freepik.com/premium-photo/kitten-white-background-gray-kitten_767502-2113.jpg?w=900" id="inputImageUrl">
        <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
    </div>

    <div class="col-12 text-center">
        <button type="submit" class="btn btn-outline-success">Add Article</button>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
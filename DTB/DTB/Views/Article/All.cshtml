@model List<GetAllArticlesViewModel>

<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <span class="breadcrumb"><a href="#">Home</a> / Articles </span>
                <h3>Articles</h3>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">

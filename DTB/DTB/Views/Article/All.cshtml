@using DTB.ViewModels.Article
@model List<GetAllArticlesViewModel>

<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <span class="breadcrumb"><a href="#">Home</a> / Articles </span>
                <h3>Articles</h3>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-4 offset-lg-4">
            <div class="section-heading text-center">
                <h6>Articles</h6>
                <h2>Count on us for premium articles curated for your interests. </h2>
            </div>
        </div>
    </div>
    <div style="display:flex;justify-content:space-between;">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div style="min-width:300px;max-width:300px;">
                <a href="article_revolutionizing.html"><img src="@Model[i].ImageUrl" alt=""></a>
                <span class="category">New</span>
                <h6>@Model[i].DateOfCreation</h6>
                <h4>
                    <a href="article_revolutionizing.html">@Model[i].Title</a>
                </h4>
                <ul>
                    <li>Author: <span>@Model[i].AuthorName</span></li>
                </ul>
                <div class="main-button">
                    <a href="article_revolutionizing.html">View</a>
                </div>
            </div>
        }
    </div>
</div>

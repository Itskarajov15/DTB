@using DTB.ViewModels.Job
@model List<GetAllJobsViewModel>
@{
    ViewBag.Title = "All Jobs";
}


@if (Model.Count <= 0)
{
    <h2 style="text-align: center;margin-top: 6px">No added jobs</h2>
}
else
{
    <div class="row">
        @foreach (var job in Model)
        {
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@job.Profession</h5>
                        <h3 class="card-title">@job.Company</h3>
                        <p class="card-text">@job.Description</p>
                        <a asp-action="GetJob" asp-controller="Job" class="btn btn-primary">View the job</a>
                    </div>
                </div>
            </div>
        }
    </div>
}